<%= form_with(model: employee) do |form| %>
  <div class="form-floating">
    <%= form.text_field :name, class: "form-control mb-3" %>
    <%= form.label :name, class: "form-label" %>
  </div>

  <div class="form-floating">
    <%= form.text_field :position, class: "form-control mb-3" %>
    <%= form.label :position, class: "form-label" %>
  </div>

  <div class="form-floating">
    <%= form.date_field :joined_company, class: "form-control mb-3" %>
    <%= form.label :joined_company, class: "form-label" %>
  </div>

  <div class="field">
    <%= form.label :image, class: "input-group mb-2" %>
    <%= form.file_field :image, class: "form-control mb-3" %>
  </div>

  <div class="d-flex lighter-blue mb-3" style="height: 60px; border-width: thick; border: dashed #8582e2;">
    
  </div>

  <div class="d-flex justify-content-end">
    <%= form.submit "Save", class: "btn btn-secondary" %>
  </div>
<% end %>
