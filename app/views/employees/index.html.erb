<p style="color: green"><%= notice %></p>

<h1>Employees</h1>

<div id="employees" class="row gap-3 pt-5 mb-3" >
  <% @employees.each do |employee| %>
    <div class="col">
      <div class="card" style="width: 18rem; height: 20rem;">
        <%= employee.image.present? ? image_tag(employee.image, class: "card-img-top", style: "height: 11rem;") : "" %>
        <div class="card-body">
          <h5 class="card-title"><%= employee.name %></h5>
          <p class="card-text"><%= employee.position %></p>
          <td><%= link_to "Show this employee", employee, class: "button-34" %></td>
        </div>
      </div>
    </div>
  <% end %>
</div>

<%= link_to "New employee", new_employee_path, class: "button-34" %>
