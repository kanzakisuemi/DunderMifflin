<%= turbo_frame_tag "modal" do %>
  <div class="dean-modal">
    <div>
      <%= link_to homepage_path, data: { controller: "modals", action: "modals#close" } do %>
        <%= image_tag "close_icon", class: "icon-s mb-3" %>
      <% end %>
    </div>
    <h2 class="fonte">Forgot your password?</h2>

    <%= form_for(resource, as: resource_name, url: password_path(resource_name), html: { method: :post }) do |f| %>
      <%= render "devise/shared/error_messages", resource: resource %>

      <p> We will send you an email with instructions to reset your password.</p>

      <div class="form-floating mb-3">
        <%= f.email_field :email, autofocus: true, autocomplete: "email", class: "form-control" %>
        <%= f.label :email, class: "form-label" %>
      </div>

      <%= f.submit "Send me", class: "btn btn-primary mb-3" %>
    <% end %>

    <%= render "devise/shared/links" %>    
  </div>
<% end %>
