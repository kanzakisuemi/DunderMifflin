<%= turbo_frame_tag "modal" do %>
  <div class="dean-modal">
    <div class="mb-3 ">
      <%= link_to "", homepage_path, class: "btn btn-close btn-sm" %>
    </div>
    <div class="d-flex mb-3">
      <%= image_tag "question_circle_icon", size: "80", class: "mx-auto" %>
    </div>

    <%= form_for(resource, as: resource_name, url: password_path(resource_name), html: { method: :post }) do |f| %>
      <%= render "devise/shared/error_messages", resource: resource %>

      <strong>Forgot your password?</strong>

      <p> We will send you an email with instructions to reset your password.</p>

      <div class="form-floating mb-3">
        <%= f.email_field :email, autofocus: true, autocomplete: "email", class: "form-control" %>
        <%= f.label :email, class: "form-label" %>
      </div>

      <%= f.submit "Send me", class: "btn btn-primary text-white mb-3" %>
    <% end %>

    <%= render "devise/shared/links" %>    
  </div>
<% end %>
