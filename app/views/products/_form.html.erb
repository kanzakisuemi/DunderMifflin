<%= form_with(model: product) do |form| %>

  <div class="form-floating mb-3">
    <%= form.select :type, options_for_select(Product.types.keys.map { |k, v| [k.humanize.capitalize, k]}), {:prompt => ""}, { class: "form-select" } %>
    <%= form.label :type, class: "form-label" %>
  </div>

  <div class="form-floating mb-3">
    <%= form.text_field :name, class: "form-control" %>
    <%= form.label :name, class: "form-label" %>
  </div>

  <div class="form-floating mb-3">
    <%= form.text_field :price, class: "form-control" %>
    <%= form.label :price, class: "form-label" %>
  </div>

  <div class="form-floating mb-3">
    <%= form.text_area :description, class: "form-control" %>
    <%= form.label :description, class: "form-label" %>
  </div>

  <div class="form-check mb-3">
    <%= form.check_box :available, class: "form-check-input" %>
    <%= form.label :available, class: "form-check-label" %>
  </div>

  <%= form.submit "Save", class: "btn btn-primary" %>

<% end %>
